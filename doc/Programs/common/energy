--
--   Display available energy or energy required
--   to dial an address
--
--   Usage:
--      energy
--      energy <address>
--

dofile("config")
dofile("compat")
args = {...}

function main()
  if #args >= 1 then
    print(sg.energyToDial(args[1]))
  else
    print(sg.energyAvailable())
  end
end

try(main)
